<div class="alert alert-info span12">
    <div class="span2 row-fluid">
        <%= image_tag @user.image_url(:thumb).to_s, :class => 'thumbnail', :style => 'width:100px; height:100px; margin:20%;' %>
    </div>
    <div class="span10 row-fluid">
        <div style="margin:3%;">
            <%= form_tag :items, :method => "post", :class => "form-horizontal" %>
            <fieldset>
                <legend>Search</legend>
                <div class="span12 row-fluid">                
                    <div class="control-group span5">
                      <%= label_tag :item_name, 'Item', :class => 'control-label' %>
                      <div class="controls">
                        <%= text_field_tag :item_name %>
                      </div>
                    </div>
                    <div class="control-group span5">
                      <%= label_tag :item_category, 'Category', :class => 'control-label' %>
                      <div class="controls">
                        <%= text_field_tag :item_category %>
                      </div>
                    </div>
                    <div class="control-group span2">
                      <%= submit_tag 'Submit', :class => 'btn btn-success' %>
                    </div>
                </div>
            </fieldset>
        </div>
    </div>
</div>
<div class="span10 offset2 row-fluid">
    <div class="span2" align="center">
        <button class="btn btn-primary">Results</button>
    </div>
    <div class="span4" align="center">
        <button class="btn btn-primary">My Bartae's</button>
    </div>
    <div class="span4" align="center">
        <button class="btn btn-primary">My Bartee's</button>
    </div>
</div>
