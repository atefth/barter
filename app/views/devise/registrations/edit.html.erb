<div class="span8 offset2">

  <fieldset>

    <legend><h2>Edit <%= resource_name.to_s.humanize %></h2></legend>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
      <%= devise_error_messages! %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

        <fieldset style="margin-left:0;" id="p_info">

        <legend>Personal Information</legend>

        <div class="control-group">
          <%= f.label :f_name, 'First Name', :class => 'control-label' %>
          <div class="controls">
            <%= f.text_field :f_name %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :l_name, 'Last Name', :class => 'control-label' %>
          <div class="controls">
            <%= f.text_field :l_name %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :birth_year, :class => 'control-label' %>
          <div class="controls">
            <%= f.text_field :birth_year %>
          </div>
        </div>
        <div class="control-group">
          <p class="control-label">Gender</p>
          <div class="span2" style="margin-left:0px;">
              <%= f.label :gender_male, 'Male', :class => 'control-label', :style => 'width:50px;' %>
              <div class="controls">
                <%= f.radio_button :gender, 'Male', :style => 'width:50px; margin-left:-115px; margin-top:9px;' %>
              </div>
            </div>
            <div class="span2">
              <%= f.label :gender_female, 'Female', :class => 'control-label', :style => 'width:50px;' %>
              <div class="controls">
                <%= f.radio_button :gender, 'Female', :style => 'width:50px; margin-left:-115px; margin-top:9px;' %>
              </div>
            </div>
        </div>
        <div class="control-group">
          <%= f.label :profession, :class => 'control-label' %>
          <div class="controls">
            <%= f.text_field :profession %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :image, 'Photo', :class => 'control-label' %>
          <div class="controls">
            <%= f.file_field :image %>
          </div>
        </div>

          <button class="btn btn-success" onClick="move(); return false;">Next</button>

      </fieldset>

      <fieldset style="margin-left:0;" id="c_info">

        <legend>Contact Information</legend>

        <div class="control-group">
          <%= f.label :email, :class => 'control-label' %>
          <div class="controls">
            <%= f.email_field :email %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :phone, :class => 'control-label' %>
          <div class="controls">
            <%= f.text_field :phone %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :area, :class => 'control-label' %>
          <div class="controls">
            <%= f.text_field :area %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :postal, 'Postal Code', :class => 'control-label' %>
          <div class="controls">
            <%= f.text_field :postal %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :city, :class => 'control-label' %>
          <div class="controls">
            <%= f.text_field :city %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :district, :class => 'control-label' %>
          <div class="controls">
            <%= f.text_field :district %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :country, :class => 'control-label' %>
          <div class="controls">
            <%= f.text_field :country %>
          </div>
        </div>

          <button class="btn btn-warning" onClick="move(); return false;">Previous</button>
        <div class="control-group pull-right">
          <%= f.submit 'Update', :class => 'btn btn-success' %>
        </div>

      </fieldset>
    <% end %>

    <h3>Cancel my account</h3>

    <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %></p>

    <%= link_to "Back", :back %>

  </fieldset>


</div>
